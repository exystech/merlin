NAME=libxml2
BUILD_LIBRARIES='libiconv?'
VERSION=2.9.1
DISTNAME=$NAME-$VERSION
COMPRESSION=tar.gz
ARCHIVE=$DISTNAME.$COMPRESSION
SHA256SUM=fd3c64cb66f2c4ea27e934d275904d92cec494a8e8405613780cbc8a71680fdb
UPSTREAM_SITE=ftp://xmlsoft.org/libxml2
UPSTREAM_ARCHIVE=$ARCHIVE
BUILD_SYSTEM=configure
# libxml2 looks for python in a non-cross-compile compatible manner and tries a python2.7-config script.
CONFIGURE_ARGS=--without-python
MAKE_VARS='V=1'
POST_INSTALL=tix-eradicate-libtool-la
